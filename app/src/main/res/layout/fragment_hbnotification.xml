<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/registration_bg"
    android:orientation="vertical"
    tools:context="com.svs.hztb.Fragments.NotificationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <com.svs.hztb.CustomViews.WalkWayTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/conversation_tones"
                android:id="@+id/textView_notification_item"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:paddingRight="15dp"
                android:paddingBottom="2dp"
                android:paddingTop="5dp" />

            <com.svs.hztb.CustomViews.WalkWayTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:text="@string/play_sounds_for_incoming_and_outgoing_messages"
                android:id="@+id/textView_notification_subitem"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"

                android:inputType="textMultiLine"
                android:paddingBottom="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox_conversation"
                android:gravity="center"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:id="@+id/listview_notification" />


</LinearLayout>
