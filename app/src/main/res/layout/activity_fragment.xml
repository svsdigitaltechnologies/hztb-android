<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ContactsFragment">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:layout_alignParentTop="true">

        <com.svs.hztb.CustomViews.WalkWayEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/search_icom"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            android:textSize="20sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:lines="1"
            android:ems="15"
            android:id="@+id/edittext_search_contact"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:hint="@string/search_contacts"
            android:textColor="@android:color/black" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:layout_alignParentBottom="true">

        <com.svs.hztb.CustomViews.WalkWayButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/picton_blue"
            android:text="@string/signup_Done"
            android:onClick="onDoneButtonClicked"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listview_contacts"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/relativeLayout4" />
</RelativeLayout>
