<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:orientation="vertical"
    tools:context="com.svs.hztb.Fragments.HomeLaunchingFragment">

    <com.svs.hztb.CustomViews.WalkWayButton
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/button_getOpinons"
    android:layout_weight="1"
    android:textSize="25dp"
    android:layout_marginBottom="2dp"
    android:onClick="requestOpinionOnClick"
    android:background="@mipmap/opinion_responded"
    android:layout_gravity="center_horizontal" />

    <com.svs.hztb.CustomViews.WalkWayButton
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/button4"
    android:layout_weight="1"
    android:onClick="respondOpinionOnClick"
    android:textSize="25dp"
    android:background="@mipmap/opinions_given"
    android:layout_marginBottom="2dp"
    android:layout_gravity="center_horizontal" />

    <com.svs.hztb.CustomViews.WalkWayButton
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textSize="25dp"
    android:id="@+id/button5"
    android:onClick="inStoreButtonOnClick"
    android:background="@mipmap/instore_button"
    android:layout_weight="1"
    android:layout_gravity="center_horizontal" />

</LinearLayout>
