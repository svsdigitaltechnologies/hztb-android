<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal">

    <TextView
        android:id="@+id/textview_date_getopinion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="18 April 2018"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/button_double_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@mipmap/wow"
        android:layout_margin="5dp"
        android:layout_toStartOf="@+id/button_single_ok"
        android:text="ButtOk" />

    <ImageView
        android:id="@+id/button_single_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/like"
        android:layout_margin="5dp"

        android:layout_alignBottom="@+id/button_double_ok"
        android:layout_toStartOf="@+id/button_maybe"
        android:text="SingOk"
        android:layout_alignTop="@+id/button_double_ok" />

    <ImageView
        android:id="@+id/button_maybe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/neutral"
        android:layout_margin="5dp"

        android:layout_toStartOf="@+id/button_down"
        android:layout_alignBottom="@+id/button_double_ok"

        android:text="May Be"
        android:layout_alignTop="@+id/button_single_ok" />

    <ImageView
        android:id="@+id/button_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/dont_like"
        android:layout_marginRight="30dp"
        android:layout_alignBottom="@+id/button_double_ok"
        android:text="ButtDwn"
        android:layout_margin="5dp"

        android:layout_alignTop="@+id/button_maybe" />

    <TextView
        android:id="@+id/textview_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_double_ok"
        android:layout_below="@+id/button_double_ok"
        android:layout_toStartOf="@+id/button_single_ok"
        android:gravity="center"
        android:text="0"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView_single_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_single_ok"
        android:layout_alignTop="@+id/textview_ok"
        android:gravity="center"
        android:text="0"
        android:textColor="@android:color/black"
        android:layout_alignStart="@+id/button_single_ok"
        android:layout_alignBottom="@+id/textview_ok"
        android:layout_alignEnd="@+id/button_single_ok" />

    <TextView
        android:id="@+id/textView_maybe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_single_ok"

        android:gravity="center"
        android:text="0"
        android:textColor="@android:color/black"
        android:layout_alignEnd="@+id/button_maybe"
        android:layout_alignStart="@+id/button_maybe" />

    <TextView
        android:id="@+id/textView_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button_down"
        android:layout_alignTop="@+id/textView_maybe"


        android:layout_toEndOf="@+id/button_maybe"
        android:gravity="center"
        android:text="0"
        android:textColor="@android:color/black" />
</RelativeLayout>