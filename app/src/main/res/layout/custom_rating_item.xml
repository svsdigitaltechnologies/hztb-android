<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal">

    <TextView
        android:id="@+id/textview_date_getopinion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="18 April 2018"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"
        android:padding="5dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/wow"
            android:layout_weight="1"
            android:id="@+id/button_double_ok"
            android:padding="2dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/like"
            android:layout_weight="1"
            android:padding="2dp"

            android:id="@+id/button_single_ok"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/button_double_ok" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/neutral"
            android:layout_weight="1"
            android:padding="2dp"

            android:id="@+id/button_maybe"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/button_single_ok" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/dont_like"
            android:padding="2dp"
            android:id="@+id/button_down"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="4"
        android:layout_height="wrap_content">
        <com.svs.hztb.CustomViews.WalkWayTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/textview_ok"
            android:textColor="@android:color/black"
            android:textSize="10dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_alignStart="@+id/button_double_ok"
            android:layout_below="@+id/button_double_ok"
            android:layout_toStartOf="@+id/button_single_ok"
            android:gravity="center" />

        <com.svs.hztb.CustomViews.WalkWayTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/textView_single_ok"
            android:layout_weight="1"
            android:textSize="10dp"

            android:textColor="@android:color/black"

            android:layout_alignRight="@+id/button_single_ok"
            android:layout_below="@+id/button_single_ok"
            android:layout_toEndOf="@+id/button_double_ok"
            android:gravity="center" />

        <com.svs.hztb.CustomViews.WalkWayTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/textView_maybe"        android:textColor="@android:color/black"
            android:textSize="10dp"

            android:layout_weight="1"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignLeft="@+id/button_maybe"
            android:layout_toStartOf="@+id/button_down"
            android:gravity="center" />

        <com.svs.hztb.CustomViews.WalkWayTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/textView_down"
            android:textSize="10dp"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:layout_alignEnd="@+id/button_down"
            android:layout_alignTop="@+id/textView6"
            android:layout_toEndOf="@+id/textView6"
            android:gravity="center" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>