<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <com.svs.hztb.CustomViews.WalkWayTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:textSize="18dp"
        android:gravity="left|center"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:id="@+id/textview_select_contacts" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView_selected"
        android:src="@mipmap/tick"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:paddingRight="20dp"
        android:layout_alignTop="@+id/textview_select_contacts"
        android:layout_alignBottom="@+id/textview_select_contacts"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:visibility="gone"
        android:src="@mipmap/right_arrow"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_alignTop="@+id/textview_select_contacts"
        android:layout_alignBottom="@+id/textview_select_contacts"/>

</RelativeLayout>